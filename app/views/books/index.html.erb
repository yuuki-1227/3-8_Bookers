<p class= "notice">
  <%= notice %>
</p>
<body>
  <div class="header">
    <h1>Books</h1>
  </div>
  <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><a href ="/books/<%= book.id %>"> Show </a></td>
          <td><a href ="/books/<%= book.id %>/edit"> Edit </a><td>
          <td><%= link_to 'Destroy', book_path(book),method: :delete,"data-confirm" => "Are you sure?"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class ="new-book">
    <h2>New book</h2>
      <% if @book.errors.any? %>
        <div class="error_explanation">
          <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
        </div>
      <% end %>
    <div class="text_field">
      <%= form_with model:@book, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_area :body %>
      <div class="action"><%= f.submit 'Create Book' %></div>
    <% end %>
    </div>
  </div>
</body>