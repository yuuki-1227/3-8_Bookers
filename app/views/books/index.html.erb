<body>
  <div class="header">
  <h1>Books</h1>
  </div>
  <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    <tbody>
      <tr>
        <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show' %></td>
        <td><%= link_to 'Edit' %></td>
        <td><%= link_to 'Destory' %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <h3>New book</h3>
  <div class="form">
  <%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Creat Book' %>
  <% end %>

  </div>
</body>