<body>
  <div class="header">
  <h1>Books</h1>
  </div>
  <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show','/books'  %></td>
          <td><%= link_to 'Edit','/books'  %></td>
          <td><%= link_to 'Destory', '/books', method: :delete, "data-confirm" => "Are you sure?" %></td>
        <% end %>
        </tr>
    </tbody>
  </table>
  <h3>New book</h3>
  <div class="form">
  <% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Creat Book' %>
  <% end %>

  </div>
</body>