<p class= "notice">
  <%= notice %>
</p>
<body>
  <div class="header">
  <h1>Books</h1>
  </div>
  <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><a href ="/books/<%= book.id %>"> Show </a></td>
          <td><a href ="/books/<%= book.id %>/edit"> Edit </a><td>
          <td><%= link_to 'Destroy', book_path(book),method: :delete,"data-confirm" => "Are you sure?"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h3>New book</h3>
  <div class="form">
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
        <ul>
          <%= @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>

    <%= form_with model:@book, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Creat Book' %>
    <% end %>

  </div>
</body>