<p class="notice">
    <%= notice %>
</p>
<h1>Editing Book</h1>
<div class="form">
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
          <ul>
            <%= @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<% end %>
<a href = "/books/<%= @book.id %>">Show</a>
<%= link_to 'Back', '/books' %>