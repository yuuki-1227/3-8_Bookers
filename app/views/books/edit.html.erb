<p class="notice">
    <%= notice %>
</p>
<div class="edit-book">
  <h1>Editing Book</h1>
    <% if @book.errors.any? %>
    <div class="error_explanation">
      <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
    </div>
    <% end %>
  <div class= "text_field">
    <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <div class= "action"><%= f.submit 'Update Book' %></div>
    <% end %>
  </div>
  <div class = "link">
    <a href = "/books/<%= @book.id %>">Show</a>
    <%= link_to 'Back', '/books' %>
  </div>
</div>